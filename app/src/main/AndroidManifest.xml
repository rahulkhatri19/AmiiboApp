<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.khatri.rahul.amiiboapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".kotlin.fastNetworking.HomeFastNetworkingActivity"/>
        <activity android:name=".java.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".java.fastNetworking.HomeFastNetworkingActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".java.activity.GameDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".java.activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBarStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".java.retrofit.HomeRetrofitActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".kotlin.retrofit.HomeRetrofitActivity" />
    </application>

</manifest>